<!--	// SMX // Stealth Bar -->

		<append xpath="/windows/window[@name='SMXunitFrame']/rect[@name='SMXstatBars']/rect[@name='SMXstealthBar']">
			<sprite name="Icon" depth="5" pos="240,5" size="28,28" atlas="{staticonatlas|once}" sprite="{staticon|once}" foregroundlayer="true" />
		</append>


<!--	// SMX // Health Bar -->

		<append xpath="/windows/window[@name='SMXunitFrame']/rect[@name='SMXstatBars']/rect[@name='SMXhealthBar']">
			<sprite name="Icon" depth="6" pos="240,-8" size="28,28" atlas="{staticonatlas|once}" sprite="{staticon|once}" foregroundlayer="true" />
		</append>


<!--	// SMX // Stamina Bar -->

		<append xpath="/windows/window[@name='SMXunitFrame']/rect[@name='SMXstatBars']/rect[@name='SMXstaminaBar']">
			<sprite name="Icon" depth="6" pos="240,-10" size="28,28" atlas="{staticonatlas|once}" sprite="ui_game_symbol_agility" foregroundlayer="true" />
		</append>


<!--	// SMX // Hunger Bar -->

		<append xpath="/windows/window[@name='SMXunitFrame']/rect[@name='SMXwellnessBars']/rect[@name='SMXhungerBar']">
			<sprite name="Icon" depth="6" pos="0,-65" size="18,18" atlas="{staticonatlas|once}" sprite="ui_game_symbol_fork" foregroundlayer="true" />
		</append>


<!--	// SMX // Thirst Bar -->

		<append xpath="/windows/window[@name='SMXunitFrame']/rect[@name='SMXwellnessBars']/rect[@name='SMXthirstBar']">
			<sprite name="Icon" depth="6" pos="0,-65" size="18,18" atlas="{staticonatlas|once}" sprite="ui_game_symbol_water" foregroundlayer="true" />
		</append>

